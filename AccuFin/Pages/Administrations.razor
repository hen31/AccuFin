@page "/administrations"



<CollectionGridComponent T="AdministrationCollectionItem"
                         CollectionSource="@AdministrationClient"
                         Title="Administraties"
                         RewriteUrl="true"
                         AllowFilter="true"
                         AddHref="/administration">
    <Columns>
        <PropertyColumn Property="x => x.Name" Title="Naam" Sortable="true"/>
        <PropertyColumn Property="x => x.AdministrationRegistryCode" Title="Kvk" Sortable="true" />
        <TemplateColumn Resizable="false" CellStyle="width:64px;" Sortable="false">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Href="@("/administration/" +context.Item.Id + PreviousNavigationService.GetUrlQuery())" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</CollectionGridComponent>


@code {
    [Inject]
    public PreviousNavigationService PreviousNavigationService { get; set; }
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    [Inject]
    public AdministrationClient AdministrationClient { get; set; }


}
